RewriteEngine On

RewriteRule ^([a-z]+)/$ ?seccion=$1 [L,QSA]
RewriteRule ^([a-z]+)/([0-9]+)$ ?seccion=$1&oper=list&pagina=$2& [L,QSA]
RewriteRule ^([a-z]+)/([a-z]+)(?:/([0-9]+))?$ ?seccion=$1&oper=$2&id=$3 [L,QSA]
RewriteRule ^horarios/$ ?seccion=horario [L,QSA]
RewriteRule ^horarios/([0-9]+)$ ?seccion=horario&curso_id=$1 [L,QSA]    

